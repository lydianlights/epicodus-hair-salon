@using HairSalon.Models;
@using HairSalon.ViewModels;
@model StylistDetailsModel

@if (Model.CurrentStylistClients.Count > 0)
{
  <h3>Clients</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Phone Number</th>
        <th>Edit<th>
      </tr>
    </thead>
    <tbody>
      @foreach(Client client in Model.CurrentStylistClients)
      {
        <tr>
          <td>@client.Name</td>
          <td>@client.Phone</td>
          <td>
            <a href="/stylists/@Model.CurrentStylist.Id/clients/remove/@client.Id"><button class="btn btn-danger" type="button">Remove</button></a>
          </td>
        </tr>
      }
    </tbody>
  </table>
}
else
{
  <h3>@Model.CurrentStylist.Name has no clients...</h3>
}
