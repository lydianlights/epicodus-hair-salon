@using HairSalon.ViewModels;
@model StylistDetailsModel

<form action="/stylists/@Model.CurrentStylist.Id/clients/add" method="post">
  <div class="form-group">
    <label for="client-name">Name:</label>
    <input class="form-control" id="client-name" name="client-name" type="text" required>
  </div>
  <div class="form-group">
    <label for="client-phone">Contact Number:</label>
    <input class="form-control" id="client-phone" name="client-phone" type="text" required>
  </div>
  <button class="btn btn-success" type="submit" name="submit-button">Add</button>
</form>
